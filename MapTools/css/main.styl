#layerDiv{
    max-height:300px;
    overflow:hidden;
}

.TableOfContents {
  position: relative;
  width: 280px;
  max-height: 300px;
  border-radius:4px;
  overflow: auto;
}
.TableOfContents .tocList {
  background-color: #f8f8f8;
  border-top: 1px solid #e0e0e0;
}

.TableOfContents .tocList ul {
 /* background-color: #d3d3d3;
  background-color: rgba(0, 0, 0, 0.025);*/
}

.TableOfContents .tocList,
.TableOfContents .tocLayer,
.TableOfContents .tocSubList,
.TableOfContents .tocSubListLayer {
  list-style: none;
  margin: 0;
  padding: 0;
}

.TableOfContents .tocSubList {
  margin: 0 0 0 12px;
}

.dj_rtl .TableOfContents .tocSubList {
  margin: 0 20px 0 0;
}

.TableOfContents .tocTitle {
  /*border-bottom: 1px solid #e0e0e0;*/
  font-size: 16px;
  line-height: 20px;
  background-color: #f8f8f8;
  color: #555;
}

.TableOfContents .tocLabel {
  display: block;
  padding: 10px 20px 10px 32px;
  margin: 0;
  font-weight: 600;
}
/*make sub layers a little smaller and normal font*/
.TableOfContents .tocLabel.sub{
  font-weight: normal;
  font-size: 14px;
}
.dj_rtl .TableOfContents .tocLabel {
  padding: 10px 32px 10px 20px;
}

.TableOfContents .tocScaleInvisible .tocLabel {
  color: #999;
}

.TableOfContents .tocCheckbox {
  float: left;
  height: 16px;
  width: 16px;
  padding: 0;
  margin: 12px 5px 12px 10px;
}

.dj_rtl .TableOfContents .tocCheckbox {
  float: right;
  margin: 12px 10px 12px 5px;
}

.TableOfContents .tocSettings {
  float: right;
  margin: 0 11px 0 0;
  padding: 10px;
  font-size: 16px;
  line-height: 20px;
  cursor: pointer;
  color: #999;
}

.TableOfContents .tocSettings:hover,
.TableOfContents .tocSettings:active {
  color: #333;
}

.TableOfContents .tocCustomContent {
  margin: 0 20px 5px 32px;
}

.dj_rtl .TableOfContents .tocCustomContent {
  margin: 0 32px 5px 20px;
}

.dj_rtl .TableOfContents .tocSettings {
  float: left;
  margin: 0 0 0 11px;
}

.tocClear {
  clear: both;
}

@media screen and (max-width: 300px) {
  .TableOfContents {
    width: auto; }
  .TableOfContents .toc-text {
    width: 60%; } }

.clear {
  clear: both; }
